<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <div class="container text-center">
      <h1>PokeAPI</h1>
      <div class="row justify-content-center">
        <% for(var i=0; i<Pokemons.length; i++) {%>
          <div class="col-2 my-2">
              <div class="card">
                <img src="<%=Pokemons[i].sprites.other.dream_world.front_default%>" class="card-img-top" alt="PokePic" width="200" height="200">
                <div class="card-body">
                  <h5 class="card-title"><%=Pokemons[i].name%></h5>
                  <h3><span class="badge bg-secondary"><%=Pokemons[i].order%></span></h3>
                </div>
              </div>
          </div>
       <% } %>
    </div>
    <div class="p-3">
      <h4>Input Desired Number Of Pokemons</h4>
    <form action="/" method="post">
      <div class="row d-flex justify-content-center">
      <div class="d-flex flex-column col-2">
      <input type="number" name="numberofpokemons" class="form-control" aria-describedby="subtext">
      <div id="subtext" class="form-text">Generate a random collection of pokemons</div>
      <button type="submit" class="btn btn-success my-2">See The Pokemons</button>
    </div>
  </div>
    </form>
    </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
